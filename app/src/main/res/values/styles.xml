<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ShapeCircular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeRoundedSquare">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeCornerCut">
        <item name="cornerSize">15dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeDiamondCut">
        <item name="cornerSize">75dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeSpecificCornerCut">
        <item name="cornerSizeTopRight">75dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeBottomLeft">75dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
    </style>

    <style name="ShapeSpecificCornerRounded">
        <item name="cornerSizeTopRight">0dp</item>
        <!--        <item name="cornerFamilyTopRight">cut</item>-->
        <item name="cornerSizeBottomLeft">@dimen/cv_radius_normal</item>
        <item name="cornerSizeBottomRight">@dimen/margin_normal</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">@dimen/_110sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/cv_radius_large</item>
        <item name="cardElevation">@dimen/cv_elevation_ex_small</item>
    </style>
    <style name="RippleEffect">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="shapeAppearanceOverlay">@style/ShapeCircular</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:paddingStart">@dimen/padding_x_large</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:ems">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="NoActionBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="SingleLineTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MenuTextStyle" parent="RippleEffect">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/cv_radius_large</item>

    </style>

    <style name="textLongStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingExtra">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <!--        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>-->
    </style>

    <style name="dancingTextStyle">
        <item name="android:textSize">@dimen/text_size_extra_bigger</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ColoredLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="btnOutlineStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/cv_radius_large</item>

    </style>


    <style name="RatingBarPrimary" parent="Widget.AppCompat.RatingBar">
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:colorControlNormal">#f9a825</item>
    </style>

    <style name="headingStyle">
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="textInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
    </style>

    <style name="editTextMultiLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="coloredTitleStyle" parent="textLongStyle">
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textSize">@dimen/text_size_bigger</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>



    <style name="DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
<!--        <item name="android:fontFamily">@font/universal_std</item>-->
        <item name="android:maxLines">2</item>
    </style>
    <style name="DialogMessage" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
<!--        <item name="android:fontFamily">@font/universal_std</item>-->
        <item name="android:maxLines">3</item>
    </style>


    <style name="MessageTimeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ChatTickStyle">
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_30sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/padding_normal</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="table_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/cv_radius_large</item>
    </style>

</resources>